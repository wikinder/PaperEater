{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:app:default",
    "core:path:default",
    "core:resources:default",
    "core:event:default",
    "core:tray:default",
    "core:menu:default",

    "opener:default",
    "http:allow-fetch",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://arxiv.org/*"
        }
      ]
    }
  ]
}
